        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="262*"/>
            <RowDefinition Height="57*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="images/logo1.jpg" Grid.RowSpan="2"/>
        <Button x:Name="button" Content="Mother" HorizontalAlignment="Left" Height="40" Margin="33,189,0,0" VerticalAlignment="Top" Width="140" Click="goToMotherPage"/>
