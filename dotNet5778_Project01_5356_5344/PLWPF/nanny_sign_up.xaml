<Window x:Class="PLWPF.nanny_sign_up"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="nanny_sign_up" Height="700" Width="500" Background="LightGreen">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="670" Margin="-1,0,-5.4,0" VerticalAlignment="Top" Width="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="35*"/>
                <RowDefinition Height="200*"/>
                <RowDefinition Height="350*"/>

            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Left" Height="59" TextWrapping="Wrap" Text="Welcome to Love and Care! hundreds of kids are waiting for you!" VerticalAlignment="Top" Width="500" FontSize="22"/>
            <StackPanel x:Name="name" Orientation="Horizontal" Grid.Row="1" Background="LawnGreen" Width="490">
                <Label x:Name="firstName" Content="first name:" FontSize="14" Width="80" HorizontalAlignment="Left"/>
                <TextBox x:Name="firstNameInput" Width="120" HorizontalAlignment="Left"/>
                <Label x:Name="lastName" Content="last name:" FontSize="14" Width="80" HorizontalAlignment="Left"/>
                <TextBox x:Name="lastNameInput" Width="120" HorizontalAlignment="Left"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Height="204"  Grid.Row="2" VerticalAlignment="Top" Width="494" Background="Aqua" Orientation="Horizontal">

                <StackPanel x:Name="Date" Orientation="Vertical" Background="red" Width="240">
                    <Label Content="Enter your birthday:" HorizontalAlignment="Center" Height="26" FontSize="14"/>
                    <Calendar/>

                </StackPanel>
                
                
                
                <StackPanel x:Name="Time" Orientation="Vertical" Background="red" Width="240"/>

            </StackPanel>




        </Grid>


    </Grid>
</Window>
