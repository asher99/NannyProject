<Window x:Class="PLWPF.PasswordLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="Admin Entry" Height="150" Width="300">
    <Grid Background="CornflowerBlue" Opacity="0.75">

        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="59,39,0,0" VerticalAlignment="Top" Width="175" Height="31"/>
        <Button x:Name="button" Content="Enter" HorizontalAlignment="Left" Margin="59,80,0,0" Style="{DynamicResource MyButtonStyle2}" VerticalAlignment="Top" Width="175" Click="button_Click" Height="28" />
        <Label x:Name="label" Content="Enter Password: " HorizontalAlignment="center" Margin="86,10,30,0" VerticalAlignment="Top" Width="176" FontSize="16" FontWeight="DemiBold" FontStyle="Italic" />

    </Grid>
</Window>
