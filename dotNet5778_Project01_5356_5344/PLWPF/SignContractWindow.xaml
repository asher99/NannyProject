<Window x:Class="PLWPF.SignContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLWPF"
        mc:Ignorable="d"
        Title="SignContractWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="229*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Sign Contract!" Grid.Row="0"  Grid.Column="0" Background="YellowGreen" Opacity="0.8" FontStyle="Italic" FontWeight="Bold" FontSize="30" Grid.RowSpan="2" VerticalAlignment="Top" />

        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="106" Margin="24,15,0,0" VerticalAlignment="Top" Width="308" Grid.Row="1"/>
        <CheckBox x:Name="checkBox" Content="I agree to the terms" HorizontalAlignment="Left" Height="20" Margin="24,129.047,0,0" VerticalAlignment="Top" Width="131" Grid.Row="1"/>
        <Grid.Background>
            <ImageBrush ImageSource="images/background1.png"/>
        </Grid.Background>
    </Grid>
</Window>
